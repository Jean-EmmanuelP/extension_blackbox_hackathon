{
  "manifest_version": 3,
  "name": "Google Sheet SQL MVP v2",
  "version": "2.0.0",
  "description": "Analyse financière avancée pour CEO avec insights IA et graphiques interactifs",
  
  "permissions": [
    "tabs",
    "storage",
    "identity",
    "activeTab",
    "downloads",
    "scripting"
  ],
  
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*",
    "https://api.blackbox.ai/*",
    "https://docs.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["agents/*.js", "lib/*.js", "styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}